{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "outDir": "ts-build",
        "jsx": "preserve",
        "paths": {
            "*": [
                "*",
                "components/*",
                "actions/*",
                "reducers/*",
                "middlewares/*",
                "helpers/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}